//		int port = 1099;
		try {
//			for(int i=0; i<7;i++){
				Registry registry = LocateRegistry.createRegistry(Registry.REGISTRY_PORT);
				registry.rebind("MonteCarloServer", new MonteCarloServer());
				System.out.println("MonteCarloServer on port: " + port);
/*				port++;
			}*/
		}
		catch(Exception e) {
